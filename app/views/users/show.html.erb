<section id="profile">
  <h2><%= @title[:subtitle] %></h2>
  <table>
    <tbody>
      <tr>
        <th>Name:</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Joined:</th>
        <td><%= @user.created_at.strftime('%B %Y') %></td>
      </tr>
      <% if current_user?(@user) %>
      <tr>
        <th>Bookmarks (<%= @user.bookmarks.count %>):</th>
        <td>
          <ul class="bookmarks">
          <% @user.bookmarks.each do |bookmark| %>
          <li>
            <span>
              <a href="<%= open_book_path(bookmark.book_id, bookmark.location, scroll: bookmark.scroll) %>">
                <svg class="bookmark-icon" viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg">
                  <polygon points="0,0 15,0 15,15 7,10 0,15"/>
                </svg> 
                <%= bookmark.name %>
              </a>
            </span>
            <span class="clearfix">
            <%= bookmark.updated_at.in_time_zone('Pacific Time (US & Canada)').strftime('%B %e, %Y %-I:%M %p') %> 
            <%= link_to 'delete', bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
            </span>
          </li>
          <% end %>
          </ul>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if current_user.admin? && current_user?(@user) %>
    <p><%= link_to 'New Book', new_book_path, class: 'btn' %></p>
    <p><%= link_to 'Manage Books', books_path, class: 'btn' %></p>
  <% end %>
  <% if current_user?(@user) %>
    <p><%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn' %></p>
  <% end %>
  <p><%= link_to 'All Readers', users_path, class: 'btn' %></p>
</section>
