<section id="profile">
    <h2><%= @title[:subtitle] %></h2>
    <table>
        <tbody>
            <tr>
                <th>Name:</th>
                <td colspan=2><%= @user.name %></td>
            </tr>
            <tr>
                <th>Joined:</th>
                <td colspan=2><%= @user.created_at.strftime('%B %Y') %></td>
            </tr>
            <%- if current_user?(@user) %>
            <tr>
                <th colspan=3>Bookmarks:</th>
            </tr>
                <%- @user.bookmarks.each do |bookmark| %>
                <tr>
                    <th><%= link_to bookmark.name, open_book_path(bookmark.book, bookmark.location, scroll: bookmark.scroll) %></th>
                    <td><%= bookmark.updated_at.in_time_zone('Pacific Time (US & Canada)').strftime('%B %e, %Y %-I:%M %p') %></td>
                    <td><%= link_to 'delete', bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' } %></td>
                </tr>
                <%- end %>
            <%- end %>
        </tbody>
    </table>
    <%- if current_user.admin? && current_user?(@user) %>
        <p><%= link_to 'New Book', new_book_path, class: 'btn' %></p>
        <p><%= link_to 'Manage Books', books_path, class: 'btn' %></p>
    <%- end %>
    <%- if current_user?(@user) %>
        <p><%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn' %></p>
    <%- end %>
    <p><%= link_to 'All Readers', users_path, class: 'btn' %></p>
</section>