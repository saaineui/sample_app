<% @location ||= 0 %>
<% @scroll_int = @scroll ? (@scroll * 100).to_i : 0 %>
<header id="sticky-bar">
    <nav class="clearfix">
<% if @override_title_logo %>
        <h1><a href="<%= book_path(@book) %>"><%= image_tag @book.logo_url, alt: @book.title %></a></h1>
<% else %>
        <h1><a href="<%= root_path %>"><%= image_tag asset_path("spineless_logo.png"), alt: "spineless" %></a></h1>
<% end %>
		<div class="nav-wrapper">
			<ul>
				<li class="main">
					<span>Main Menu</span>
					<ul class="menu">
						<% if logged_in? %>
						<li><%= link_to "Profile", current_user %></li>
						<li><%= link_to "Log out", logout_path, method: :delete %></li>
						<% else %>
						<li><%= link_to "Login", login_path %></li>
						<li><%= link_to "Sign up", signup_path %></li>
						<% end %>
						<li><%= link_to "Help", root_path + "#help" %></li>
						<% if @book && !@book.id.nil? %>
						<li><%= link_to "Get Bookmark", request.original_url.html_safe, id: "bookmark" %></li>
							<% if logged_in? %>
						<li><%= link_to "Save Bookmark", "#{new_bookmark_path}?book_id=#{@book.id.to_s}&location=#{@location.to_s}&scroll=#{@scroll_int.to_s}".html_safe , id: "new-bookmark" %></li>
							<% end %>
						<% end %>
					</ul>
				</li>
						<% if @book && !@book.id.nil? %>
				<li class="toc">
					<span>Table of Contents</span>
					<ul class="menu">
						<li><%= link_to "Cover", book_path(@book) + "?location=0" %></li>
						<%- skips = @skips || 4 %>
							<%- @book.sections.chapters.order(:order).each do |section| %>
						<li><%= link_to section.index_title, book_path(@book) + "?location=#{section.order+skips-1}" %></li>
							<%- end %>
					</ul>
				</li>
				<div id="progress-bar"><span id="progress"></span></div>
				<div id="progress-percent"><%= @progress_with_scroll %>%</div>
						<% end %>
			</ul>
		</div>
    </nav>
</header>