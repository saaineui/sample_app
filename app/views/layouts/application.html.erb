<%- @override_title_logo ||= false %>
<%- @override_background ||= false %>
<!DOCTYPE html>
<html>
<head>
    <title><%= clean_title(@override_title_logo, yield(:title)) %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Lato:400,300,400italic,700,700italic', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
</head>
<%- if @override_background %>
<style>
body { background-image: url('<%= @background_image_url %>'); }
</style>
<%- end %>
<body>
    <div id="wrapper" class="box">
<%= render 'layouts/header' %>
<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<%= yield %>
    </div>
</body>
</html>