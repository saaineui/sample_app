<% provide(:title, @page_subtitle) %>

<div id="scroll-wrap">
	<div id="ebook">
		<%- case @location %>
		<%- when 0 %>
		<p><figure><%= image_tag @book.cover_image_url, alt: @book.title %></figure></p>
		<%- when 1 %>
		<h2><%= @book.title %></h2>
		<h2>by <%= @book.author %></h2>
		<p class="buffcenter">A Novel</p>
		<%- when 2 %>
		<%= @book.epigraph.html_safe %>
		<%- when 3 %>
		<%= @book.copyright.html_safe %>
		<%- else %>
		<%= @book.sections[@location-@skips].text.html_safe %>
		<%- end %>
	</div>
</div>
<div id="book-nav">
    <nav class="up">
    Back
    </nav>
    <nav class="down">
    Next
    </nav>
</div>
<%= link_to "Back", book_path(@book) + "?location=" + (@location - 1).to_s, id: "back-btn" if @location > 0 %>
<%= link_to "Next", book_path(@book) + "?location=" + (@location + 1).to_s, id: "next-btn" if @location < (@book.sections.count + 3) %>