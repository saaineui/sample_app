<% provide(:title, "Edit #{@book.title}") %>

<h2>Edit</h2>
<h3><%= @book.title %></h3>

<%= form_for(@book) do |f| %>

	<%- if @book.errors.any? %>
	<div id="error_explanation">
		<%- @book.errors.full_messages.each do |msg| %>
			<p><%= msg %></p>
		<%- end %>
	</div>
	<%- end %>

	<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</p>

	<p>
	<%= f.label :author %>
	<%= f.text_field :author %>
	</p>

	<p>
	<%= f.label :subtitle %>
	<%= f.text_field :subtitle %>
	</p>

	<p>
	<%= f.label :logo_url %>
	<%= f.text_field :logo_url %>
	</p>

	<p>
	<%= f.label :cover_image_url %>
	<%= f.text_field :cover_image_url %>
	</p>

	<p>
	<%= f.label :background_image_url %>
	<%= f.text_field :background_image_url %>
	</p>

	<p>
	<%= f.label :epigraph %>
	<%= f.text_area :epigraph %>
	</p>

        <div class="example-markup">
            <p>Example: </p>
            <pre><%= "<blockquote>
	<p class=\"epi-quote\">&#147;Quote here.&#148;</p>
	<p class=\"epi-attribution\">Source</p>
</blockquote>" %></pre>
        </div>

	<p>
	<%= f.label :copyright %>
	<%= f.text_area :copyright %>
	</p>

        <div class="example-markup">
            <p>Example: </p>
            <pre><%= "<div class=\"cc-license\">
    <p>
        This work is licensed under a license.
    </p>
</div>" %></pre>
        </div>

	<p>
	<%= f.submit "Save", class: "btn" %>
	</p>
	<p><%= link_to "Cancel", books_path %> | <%= link_to "Go to #{@book.title}", book_path(@book) %></p>
<% end %>

